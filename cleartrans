#!/bin/bash
amounts=( 4.50 2.50 1.00 8.00 7.00 )
trans_count=${#amounts[@]}
until [ ${#ones} -eq "$trans_count" ];do ones+="1"; done
total=$1
for i in $(seq "$((2#$ones))")
do
    binary=$(echo "obase=2;$i" | bc)
    if [ "$trans_count" -ne ${#binary} ]
    then
        until [ ${#zeros} -eq $((trans_count-${#binary})) ];do zeros+="0";done
        form_binary="$zeros""$binary"
    else
        form_binary="$binary"
    fi   
    for ((n=0; n<=trans_count; n++ ))
    do
        if [ "${form_binary:n:1}" ==  1 ]
        then
            price="${amounts[$n]}"
            if [ -z "$prices" ]
            then
                sum="$price"
            else
                sum=$(echo "$sum" + "$price" | bc -l)
            fi
            prices+="${amounts[$n]} "
        fi
    done
    [ "$sum" == "$total" ] && echo "$prices"
    unset sum
    unset prices
    unset zeros
done
